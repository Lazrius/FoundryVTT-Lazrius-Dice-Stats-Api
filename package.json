{
	"name": "express-ts-template",
	"version": "1.2.0",
	"description": "Simple starter template for ExpressJs and TypeScript based on expressjs/generator and TypeScript-Node-Starter",
	"main": "server.js",
	"scripts": {
		"start": "npm run serve",
		"build": "npm run build-ts",
		"serve": "node dist/server.js",
		"test": "jest --coverage=false --verbose",
		"watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
		"watch-node": "nodemon dist/server.js",
		"build-ts": "npx ttsc",
		"watch-ts": "npx ttsc -w",
		"lint": "eslint src/*.ts",
		"lint-fix": "yarn lint --fix",
		"debug": "npm run build && npm run watch-debug",
		"serve-debug": "nodemon --config nodemon.json --inspect dist/server.js",
		"watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
		"typecheck": "npx ttsc --noEmit",
		"run-prettier": "prettier src/*.ts",
		"validate-prettiness": "yarn run-prettier -c",
		"make-prettier": "yarn run-prettier --write"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"express": "^4.16.2",
		"http-errors": "^1.7.1",
		"http-status-codes": "^2.2.0",
		"mysql2": "^2.3.3",
		"reflect-metadata": "^0.1.13",
		"tst-reflect": "^0.7.3",
		"typeorm": "^0.2.43",
		"yargs": "^17.3.1"
	},
	"devDependencies": {
		"@types/express": "4.17.13",
		"@types/http-errors": "1.8.2",
		"@types/node": "14.18.12",
		"@types/yargs": "^17.0.8",
		"@typescript-eslint/eslint-plugin": "4.33.0",
		"@typescript-eslint/parser": "4.33.0",
		"class-transformer": "^0.5.1",
		"concurrently": "6.5.1",
		"eslint": "7.32.0",
		"eslint-config-prettier": "8.4.0",
		"eslint-plugin-import": "2.25.4",
		"nodemon": "2.0.15",
		"prettier": "2.5.1",
		"tst-reflect-transformer": "^0.9.3",
		"ttypescript": "^1.5.13",
		"typescript": "4.5.5"
	}
}
